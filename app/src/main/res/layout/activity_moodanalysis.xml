<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".moodanalysis">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="How is your mood today ?"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.242"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.186" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="70dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.435">

        <Button
            android:id="@+id/sad"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/inter_button_background"
            android:drawableLeft="@drawable/sad1"
            android:paddingLeft="10dp"
            android:text="sad"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="329dp" />

        <Button
            android:id="@+id/angry"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/inter_button_background"
            android:drawableLeft="@drawable/angry1"
            android:paddingLeft="10dp"
            android:text="Angry"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="264dp" />

        <Button
            android:id="@+id/happy"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/inter_button_background"
            android:drawableLeft="@drawable/happiness1"
            android:paddingLeft="10dp"
            android:text="Happy"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="203dp" />

        <Button
            android:id="@+id/irrited"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/inter_button_background"
            android:drawableLeft="@drawable/irritated1"
            android:paddingLeft="10dp"
            android:text="Irritated"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="463dp" />

        <Button
            android:id="@+id/tired"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:background="@drawable/inter_button_background"
            android:drawableLeft="@drawable/tired1"
            android:paddingLeft="10dp"
            android:text="Tired"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="396dp" />

    </LinearLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="233dp"
        android:layout_height="50dp"
        android:background="@drawable/homepagebox3"
        android:fontFamily="@font/poppins_semibold"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.808" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toTopOf="@+id/textView12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/previous" />

</androidx.constraintlayout.widget.ConstraintLayout>