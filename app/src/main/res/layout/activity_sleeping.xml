<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sleeping">


    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Sleeping"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.135" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="628dp"
        android:background="@drawable/menupg_box"
        android:paddingLeft="40dp"
        android:paddingTop="40dp"
        android:paddingRight="40dp"
        android:paddingBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="30dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="How many hours of sleep did you get last night ?"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.494"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.368" />

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="301dp"
                    android:layout_height="148dp"

                    android:layout_marginBottom="30dp"
                    android:background="@drawable/sleeping_strokebox"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.49"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.515">

                    <NumberPicker
                        android:id="@+id/picker1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/homepagebox"
                        android:inputType="text"
                        android:paddingLeft="20dp"
                        tools:layout_editor_absoluteX="230dp"
                        tools:layout_editor_absoluteY="442dp" />

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="50dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:text=":"
                        android:textAlignment="center"
                        android:textColor="@color/color1"
                        android:textSize="50sp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="180dp"
                        tools:layout_editor_absoluteY="442dp" />

                    <NumberPicker
                        android:id="@+id/picker2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/homepagebox"
                        android:inputType="text"
                        android:paddingLeft="20dp"
                        tools:layout_editor_absoluteX="100dp"
                        tools:layout_editor_absoluteY="442dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="how would you rate its quality on a scale of 10 ?"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.545"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.66" />

                <SeekBar
                    android:id="@+id/seekBar1"
                    android:layout_width="317dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="30dp"
                    android:max="10"
                    android:progress="5"
                    android:progressTint="@color/color2"
                    android:thumbTint="@color/color1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.51"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.72" />

            </LinearLayout>

            <Button
                android:id="@+id/submit"
                android:layout_width="111dp"
                android:layout_height="50dp"
                android:layout_marginLeft="110dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/homepagebox3"
                android:text="Submit"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.98" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="INSTRUCTIONS:\n\n

• The following question refers to your overall sleep quality for the majority of nights in the past 7 days ONLY.\n

• Please think about the quality of your sleep overall, such as how many hours of sleep you got, how easily you fell asleep, how often you woke up during the night (except to go to the bathroom), how often you woke up earlier than you had to in the morning, and how refreshing your sleep was."
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="During the past 7 days, how would you rate your sleep quality overall? (Please mark only 1 box)"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="match_parent"

                android:layout_height="50dp"
                app:srcCompat="@drawable/sleepdet1" />

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toTopOf="@+id/textView17"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.73"
        app:srcCompat="@drawable/previous" />

</androidx.constraintlayout.widget.ConstraintLayout>