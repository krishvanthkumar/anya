<?xml version="1.0" encoding="utf-8"?>


    <layer-list xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        tools:ignore="MissingDefaultResource">
    <!-- Add the shadow layer behind the image -->
        <item>
            <shape>
                <solid android:color="#FF888888" /> <!-- Shadow color -->
                <corners android:radius="20dp" /> <!-- Optional: Rounded corners for the shadow -->
            </shape>
        </item>
        <!-- Add the image on top of the shadow -->
        <item android:left="0dp" android:top="0dp" android:right="3dp" android:bottom="3dp">
            <shape android:shape="rectangle">
                <solid android:color="#FFFCE8EA"/>
                <corners android:radius="20dp"/>
            </shape>
        </item>
    </layer-list>





